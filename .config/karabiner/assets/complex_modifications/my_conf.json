{
    "title": "my config",
    "rules": [
        {
            "description": "command単体:英かな, command->control, caps->command, control->caps(caps<->control in item2)",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "left_command",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_command",
                            "lazy": true
                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "japanese_eisuu"
                        }
                    ],
                    "conditions": [
                        {
                            "type": "frontmost_application_if",
                            "bundle_identifiers": [
                                "^com.googlecode.iterm2",
                                "^com.microsoft.VSCode",
                                "^com.microsoft.rdc.macos",
                                "^io.alacritty"
                            ]
                        }
                    ]
                },
                {
                    "type": "basic",
